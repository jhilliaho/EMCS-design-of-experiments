#!/bin/bash


OUTPUTFILE="permutation_test_results/test$1"

> $OUTPUTFILE;

for VARIABLE in {1..100}
do

	RESULT="$(istanbul cover _mocha test/index.test.js -- random 5 | egrep -w '# tests|# pass')"

	TESTS=$(echo "$RESULT" | egrep "tests")
	TESTS=${TESTS##* }

	PASS=$(echo "$RESULT" | egrep "pass")
	PASS=${PASS##* }

	echo "TEST "$VARIABLE": "$PASS"/"$TESTS" Passed"

	if [ "$PASS" != "$TESTS" ]
	then
	    echo 1 >> $OUTPUTFILE
	else
	    echo 0 >> $OUTPUTFILE
	fi

done

